{
    "name": "linkedinpost",
    "publisher": "theglitch",
    "displayName": "LinkedInPost",
    "description": "share code parts and create a linkedIn post",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.76.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:linkedinpost.helloWorld",
        "onView:linkedinpost-sidebar"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [{
                "command": "linkedinpost.helloWorld",
                "title": "Hello World"
            },
            {
                "command": "linkedinpost.createImage",
                "title": "LinkedIn Post: Create Image from Code"
            }
        ],
        "viewsContainers": {
            "activitybar": [{
                "id": "linkedinpost-sidebar-view",
                "title": "LINKEDIN POST",
                "icon": "resources/assets/LinkedInPost-vscode-tr.png"
            }]
        },
        "views": {
            "linkedinpost-sidebar-view": [{
                "type": "webview",
                "id": "linkedinpost-sidebar",
                "name": "",
                "icon": "resources/assets/LinkedInPost-vscode-tr.png",
                "contextualTitle": "linkedinpost"
            }],
            "explorer": [{
                "type": "webview",
                "id": "linkedinpost-explorer",
                "name": "LinkedIn Post",
                "icon": "resources/assets/LinkedInPost-vscode-tr.png",
                "contextualTitle": "linkedinpost"
            }]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^8.0.1",
        "@types/mocha": "^10.0.1",
        "@types/node": "16.x",
        "@types/vscode": "^1.76.0",
        "@typescript-eslint/eslint-plugin": "^5.49.0",
        "@typescript-eslint/parser": "^5.49.0",
        "@vscode/test-electron": "^2.2.2",
        "eslint": "^8.33.0",
        "glob": "^8.1.0",
        "mocha": "^10.1.0",
        "ts-loader": "^9.4.2",
        "typescript": "^4.9.4",
        "webpack": "^5.75.0",
        "webpack-cli": "^5.0.1"
    },
    "dependencies": {
        "axios": "^1.3.4",
        "open": "^9.1.0"
    }
}